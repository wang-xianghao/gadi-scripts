if [ -z "$1" ]; then
    project=es56
else
    project=$1
fi

if [ -z "$2" ]; then
    nodes=1
else
    nodes=$2
fi

ncpus=$(( 48 * $nodes ))
ngpus=$(( 4 * $nodes ))
mem=$((380 * $nodes))
jobfs=$(( 200 * $nodes ))

echo qsub -I -q gpuvolta  -P ${project} -l walltime=05:00:00,ncpus=$ncpus,ngpus=$ngpus,mem=${mem}GB,jobfs=${jobfs}GB,storage=scratch/p00,wd
qsub -I -q gpuvolta  -P ${project} -l walltime=05:00:00,ncpus=$ncpus,ngpus=$ngpus,mem=${mem}GB,jobfs=${jobfs}GB,storage=scratch/p00,wd